@model OnlineExaminationPortal.Models.MCQQuestions

@{
    ViewData["Title"] = "DeleteMCQQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white"><h3>Delete MCQ Question</h3></div>
    <div class="card-body">
        <h3>Are you sure you want to delete this question?</h3>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Question)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Question)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Option1)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Option1)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Option2)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Option2)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Option3)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Option3)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Option4)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.Option4)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CorrectAnswer)
                </dt>
                <dd class="col-sm-10">
                    @Html.Raw(Model.CorrectAnswer)
                </dd>
            </dl>

            <form asp-action="DeleteMCQQuestion">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
