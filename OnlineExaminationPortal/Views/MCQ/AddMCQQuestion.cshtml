@model MCQQuestions
@{
    ViewBag.Title = "Add MCQ Question";
}

<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote-lite.min.css" rel="stylesheet">

<div class="card">
    <div class="card-header bg-primary text-white"><h3>Add MCQ Question</h3></div>
    <div class="card-body">
        <form asp-action="AddMCQQuestion" role="form">
            @*@await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = $"{(String.IsNullOrEmpty(Model.Id) ? "Add" : "Edit")} Question" })*@
            <div class="modal-body form-horizontal">
                <div class="row">
                    <div class="col-md-12">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Question"></label>
                            <textarea asp-for="Question" class="form-control"></textarea>
                            <span asp-validation-for="Question" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Option1"></label>
                            <textarea asp-for="Option1" class="form-control"></textarea>
                            <span asp-validation-for="Option1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Option2"></label>
                            <textarea asp-for="Option2" class="form-control"></textarea>
                            <span asp-validation-for="Option2" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Option3"></label>
                            <textarea asp-for="Option3" class="form-control"></textarea>
                            <span asp-validation-for="Option3" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Option4"></label>
                            <textarea asp-for="Option4" class="form-control"></textarea>
                            <span asp-validation-for="Option4" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CorrectAnswer"></label>
                            <select asp-for="CorrectAnswer" class="form-control">
                                <option class="form-control" value="1">Option 1</option>
                                <option class="form-control" value="2">Option 2</option>
                                <option class="form-control" value="3">Option 3</option>
                                <option class="form-control" value="4">Option 4</option>
                            </select>
                            <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-controller="MCQ" asp-action="index"
                       class="btn btn-danger">Cancel</a>
                </div>
            </div>
            @*@await Html.PartialAsync("_ModalFooter", new ModalFooter { })*@
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote-lite.min.js"></script>
<script src="~/commonModel/summernote.js"></script>

<script>
    getSummerNote("Question", 120,1500);
    getSummerNote("Option1", 70,800);
    getSummerNote("Option2", 70,800);
    getSummerNote("Option3", 70,800);
    getSummerNote("Option4", 70,800);
</script>
