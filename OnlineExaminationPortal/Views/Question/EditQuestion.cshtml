@model Question
@{
    ViewBag.Title = "Edit Question";
}

<h1>Edit Question</h1>

<form asp-action="EditQuestion" role="form">
    @*@await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = $"{(String.IsNullOrEmpty(Model.Id) ? "Add" : "Edit")} Question" })*@
    <div class="modal-body form-horizontal">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="QuestionDescription"></label>
                    @Html.TextAreaFor(m => m.QuestionDescription, new { @class = "form-control", rows = "5" })
                    <span asp-validation-for="QuestionDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Marks"></label>
                    <input asp-for="Marks" class="form-control" />
                    <span asp-validation-for="Marks" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PositionId"></label>
                    <select asp-for="PositionId" asp-items="@Model.PositionList" class="form-control">
                        <option>Please select</option>
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-controller="Question" asp-action="index"
               class="btn btn-danger">Cancel</a>
        </div>
    </div>
    @*@await Html.PartialAsync("_ModalFooter", new ModalFooter { })*@
</form>  