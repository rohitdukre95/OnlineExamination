@model ExamQuestionsViewModel

@{
    ViewBag.Title = "Start Exam";
    var nextPageNumber = Model.PageNumber + 1;
    var backPageNumber = Model.PageNumber - 1;
    var SubmitResult = @Html.Raw(Json.Serialize(Model.SubmissonResult));
    //var SubmitResult = Model.SubmissonResult;
}

@Html.Hidden("SubmissionResult_ID", SubmitResult, new { id = "SubmissionResult_ID" })

<p class="text-info mt-2" style="font-size:30px">
    @Model.QuestionDescription
</p>
@{await Html.RenderPartialAsync("_CodeEditor"); }


<div class="row ml-0">
    @if (backPageNumber > 0)
    {
        @*<a asp-route-pageNumber="@backPageNumber" asp-route-positionId="@Model.PositionId" class="btn btn-primary m-1" style="width:auto" }> Previous Question</a>*@
        <a class="btn btn-primary m-1" style="width:auto" onclick=SubmitAnswer(@backPageNumber,@Model.PositionId,@Model.QuestionNumber,@Model.CandidateId)> Previous Question</a>
    }
    <button type="submit" class="btn btn-success mt-1"
            style="width:auto">
        Submit
    </button>
    @if (nextPageNumber < 5)
    {
        <a class="btn btn-primary ml-auto m-1" style="width:auto" onclick=SubmitAnswer(@nextPageNumber,@Model.PositionId,@Model.QuestionNumber,@Model.CandidateId)> Next Question</a>
    }
</div>


@section Scripts {
    <script src="~/js/ExamSubmission.js"></script>
}
<script src="~/service/ExamSubmissionService.js"></script>
<script src="~/commonModel/commonModel.js"></script>
