@model CheckCandidateDetailsToStartExamViewModel

@{
    ViewBag.Title = "Verification Form";
}


    <div class="card">
        <div class="card-header bg-primary text-white"><h4>Verification Form</h4></div>
        <div class="card-body">
            <form asp-action="CheckCandidateDetailsToStartExam" role="form">
                @*@await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = $"{(String.IsNullOrEmpty(Model.Id) ? "Add" : "Edit")} Question" })*@
                <div class="modal-body form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Mobile"></label>
                                <input asp-for="Mobile" class="form-control" />
                                <span asp-validation-for="Mobile" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <a asp-controller="Candidate" asp-action="CheckCandidateDetailsToStartExam"
                           class="btn btn-danger">Cancel</a>
                    </div>
                </div>
                @*@await Html.PartialAsync("_ModalFooter", new ModalFooter { })*@
            </form>
            </div>
        </div>

